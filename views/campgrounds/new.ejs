<% include ../header %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1>Create a New Campground!</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            class="form-control"
            type="text"
            name="name"
            id="name"
            placeholder="name"
            required
          />
        </div>
        <div class="form-group">
          <label for="image">Image Url</label>
          <input
            class="form-control"
            type="text"
            name="img"
            id="image"
            placeholder="image url"
            required
          />
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input
            class="form-control"
            type="number"
            name="price"
            id="price"
            placeholder="9.99"
            min="0.01"
            step="0.01"
            required
          />
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          <input
            class="form-control"
            type="text"
            name="location"
            id="location"
            placeholder="ie: Yosemite National Park, CA"
            required
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input
            class="form-control"
            type="text"
            name="description"
            id="description"
            placeholder="California's Sierra Nevada mountains"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-block btn-primary">Submit!</button>
        </div>
      </form>
      <a class="btn goBack" href="/campgrounds"><i class="fa fa-arrow-left"></i> Go back</a>
    </div>
  </div>
</div>
